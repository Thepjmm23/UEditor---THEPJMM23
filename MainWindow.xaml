<Window x:Class="UEditorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UEditor" Height="600" Width="800" Background="#F8F8F8">
    <Grid>
        <!-- Top Navigation Bar -->
        <DockPanel Background="White" Height="50" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                <TextBlock Text="Home" FontSize="14" Margin="10,0" Foreground="Gray" Cursor="Hand" 
                           MouseLeftButtonDown="HomeButton_Click"/>
                <TextBlock Text="Install" FontSize="14" Margin="10,0" Foreground="Gray"  Cursor="Hand" 
                           MouseLeftButtonDown="InstallButton_Click"/>
                <TextBlock Text="Games" FontSize="14" Margin="10,0" Foreground="Gray"/>
                <TextBlock Text="Credits" FontSize="14" Foreground="Gray" Cursor="Hand" 
                
                           MouseLeftButtonDown="CreditsButton_Click"/>
                <TextBlock FontSize="14" Foreground="Gray" Cursor="Hand" MouseLeftButtonDown="ChatButton_Click" Text=" Chat"/>
            </StackPanel>
        </DockPanel>

        <!-- Frame to display Pages -->
        <Frame Name="MainFrame" NavigationUIVisibility="Hidden" Margin="0,50,0,0"/>
    </Grid>
</Window>
